<p id ="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">

       <div class="col-md-8 offset-md-1">
       <h2>配送先編集</h2>

        <%= form_with model: @address, url: public_address_path, method :PATCH do |f| %>

        <div class="form-group">
           <label for="postal_cade">郵便番号（ハイフンなし）</label>
             <%= f.text_field :postal_cade, id:"postal_cade"　%>
        </div>


         <div class="form-group">
           <label for="address">住所</label>
             <%= f.text_field :address, id:"address_address"　%>
        </div>


         <div class="form-group">
           <label for="address_name">宛名</label>
             <%= f.text_field :address_name, autofocus: true, id:"inputName"　%>
        </div>

        <div class="form-group">
        <%= f.submit "変更内容を保存" , class: "btn btn-success" %>
        </div>

       <% end %>

      </div>
    </div>
  </div>