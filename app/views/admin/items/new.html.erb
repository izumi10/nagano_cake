<p id ="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">

       <div class="col-md-8 offset-md-1">
        <h3>新規商品登録</h3>


          <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

             <div class="form-group">
                <label for="item_image">商品画像</label>
                 <%= f.file_field:item_image, placeholder: "商品画像", accept: "image/*" ,id:"item_image"%>
             </div>

             <div class="form-group">
              <label for="item_name">商品名</label>
              <%= f.text_field :item_name, autofocus: true, id:"inputName", placeholder:"商品名"%>
            </div>

             <div class="form-group">
                <label for="introduction">商品説明</label>
                   <%= f.text_area:introduction, placeholder:"ここに説明文を記述します", id:"introduction"%>
             </div>

             <div class="form-group">
                 <label for="price">税抜き価格</label>
                 <%= f.text_field:price, id:"price", placeholder:"1000" %>
                 <label>円</label>
             </div>

             <div>
              <%= f.collection_select :genre_id, @genre, :id, :genre_name, include_blank: "--選択して下さい--" %>
             </div>

             <div>
              <%= f.radio_button :checked, :ture %>
              <%= f.label :checked, "販売中" %>
              <%= f.radio_button :checked, :false %>
              <%= f.label :checked, "販売停止中" %>
             </div>



              <div class="form-group">
               <%= f.submit "新規登録" , class: "btn btn-success" %>
              </div>

         <% end %>


       </div>
    </div>
  </div>
