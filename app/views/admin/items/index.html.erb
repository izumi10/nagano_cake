 <p id ="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">


       <div class="col-md-8 offset-md-1">
        <h1>商品一覧</h1>

         <table class="table table-hover table-inverse">
          <thead>
           <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
           </tr>
          </thead>

          <tbody>
         <% @items.each do |item| %>

           <tr>

             <td><%= item.id %></td>

             <td><%= link_to item.item_name, admin_item_path(item.id) %></td>

             <td><%= item.price %></td>

             <td><%= item.genre.genre_name %></td>

             <td></td>

           </tr>

         <% end %>

         </tbody>

     </div>
    </div>
  </div>