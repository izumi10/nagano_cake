<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
   <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
   <body>

   <header>

      <div class="container border-bottom">
      <nav class="navbar navbar-expand-lg ">
       <div class="container">
       <a class="navbar-brand" href="/public">
        <span>NaganoCake</span></a>

       <ul class="nav pull-right nav-pills" style="list-style: none;">

        <% if admin_signed_in? %>
            <li>
             <%=link_to admin_items_path, class:"nav-link text-dark" do %>
              商品一覧
             <% end %>
            </li>

            <li>
            <%= link_to admin_customers_index_path, class:"nav-link text-dark" do  %>
            会員一覧
            <% end %>
            </li>

            <li>
            <%= link_to admin_path, class:"nav-link text-dark" do  %>
            注文履歴一覧
            <% end %>
            </li>

            <li>
            <%= link_to admin_genres_index_path, class:"nav-link text-dark" do  %>
            ジャンル一覧
            <% end %>
            </li>

            <li>
            <%= link_to destroy_admin_session_path, class:"nav-link text-dark" do  %>
            ログアウト
            <% end %>
            </li>

             <% else %>
            <li>
             <%= link_to public_homes_about_path, class: "nav-link text-dark" do %>
             About
             <% end %>
            </li>

            <li>
             <%= link_to public_items_path, class: "nav-link text-dark" do %>
             商品一覧
             <% end %>
            </li>

            <li>
             <%= link_to new_customer_registration_path, class: "nav-link text-dark" do %>
             新規登録
             <% end %>
            </li>

            <li>
             <%= link_to new_customer_session_path, class: "nav-link text-dark" do %>
             ログイン
             <% end %>
            </li>
            <% end %>



        <% if customer_signed_in? %>

          <li>
           <%#= link_to public_customer_path, class:"nav-link text-dark" do %>
            マイページ
            <%# end %>
          </li>

          <li>
            <%= link_to public_items_path, class:"nav-link text-dark" do %>
              商品一覧
            <% end %>
          </li>

          <li>
           <%= link_to public_cart_items_path, class:"nav-link text-dark" do %>
             カート
           <% end %>
          </li>

          <li>
           <%= link_to  "ログアウト", destroy_customer_session_path, method: :delete, class:"nav-link text-dark"  %>
          </li>

            <% else %>
            <li>
             <%= link_to public_homes_about_path, class: "nav-link text-dark" do %>
             About
             <% end %>
            </li>

            <li>
             <%= link_to public_items_path, class: "nav-link text-dark" do %>
             商品一覧
             <% end %>
            </li>

            <li>
             <%= link_to new_customer_registration_path, class: "nav-link text-dark" do %>
             新規登録
             <% end %>
            </li>

            <li>
             <%= link_to new_customer_session_path, class: "nav-link text-dark" do %>
             ログイン
             <% end %>
            </li>
            <% end %>



           </ul>
           </nav>

          </div>
        </div>

    </header>
     <main>
     <%= yield %>
     </main>

     <footer>

     </footer>

  </body>
</html>
