<p id ="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">

       <div class="col-md-8 offset-md-1">
            <h3>商品編集</h3>

            <%= form_with model: @item, url: admin_item_path do |f| %>

               <div class="form-group">
                    <label for="item_image">商品画像</label>
                     <%= f.file_field:item_image, placeholder: "商品画像", accept: "image/*" ,id:"item_image"%>
                 </div>
               <div class="form-group">
                  <label for="item_name">商品名</label>
                　 <%= f.text_field :item_name, autofocus: true, id:"inputName"%>
                </div>
                 <div class="form-group">
                    <label for="introdaction">商品説明</label>
                       <%= f.text_area:introduction, id:"introdaction"%>
                 </div>
                 <div class="form-group">
                     <label for="price">税抜き価格</label>
                     <%= f.text_field:price, id:"price" %>

                 </div>

                 <div>
                   <label for="genre_name">ジャンル</label>
                   <%= f.collection_select :genre_name, @genre, :id, :genre_name %>
                 </div>

                    <div>
                      <%= f.radio_button :checked, :true %>
                      <%= f.label :checked, "販売中" %>
                      <%= f.radio_button :checked, :false %>
                      <%= f.label :checked, "販売停止中" %>
                    </div>



              <%= f.submit '変更を保存', class: "btn btn-success" %>

            <% end %>


      </div>
    </div>
  </div>
