<p id ="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">
     </div>

     <div class="mx-auto col-11 col-sm-10 col-log-8 col-xl-8 mt-5">
      <% if @item.item_image.attached? %>
           <%= image_tag @item.item_image, size: "300x300" %>
           <% else %>
           <%= image_tag 'no_image', size: "300x300" %>
            <% end %>



          <table align="left">
          <tr>
             <th><%= @item.item_name %></th>
           </tr>

          <tr>
             <th><%= @item.introduction %></th>
          </tr>

          <tr><th><%= @item.price %></th></tr>

         <% if customer_signed_in? %>
          <%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
          <tr><th><%= f.select :amount, *[1..10] %> </th></tr>
                  <%= f.hidden_field :title, :value =>@item.item_name %>




          <tr><th><div class="form-group">
          <%= f.submit "カートに入れる" , class: "btn btn-success" %>
          </div>
          </th></tr>

          <div>
          </table>
          <% end %>

            <% end %>


    </div>
  </div>

