<p id ="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">

          <div class="col-md-8 offset-md-1">
          <h3>ジャンル一覧・追加</h3>
           <%= form_with model: @genre, url:admin_genres_path do |f| %>
            <div class="form-group">
             <label for="genre_name">ジャンル</label>
              <%= f.text_field :genre_name, autofocus: true, id:"inputName", placeholder:"キャンディ"%>
              </div>

              <div class="form-group">
               <%= f.submit "新規登録" ,  class: "btn btn-success" %>
              </div>
              <% end %>

            <table class="table table-hover table-inverse">
              <thead>
                <tr><th>ジャンル名</th></tr>
              </thead>
               <tbody>
                <% @genres.each do |genre| %>
                <tr>
                 <td><%= genre.genre_name %></td>
                 <td><td><%= link_to admin_edit_genre_path(genre.id) do %>
                         <buttun class= "btn btn-success">編集する</buttun>
                         <% end %>
                 </td></td>
                </tr>
               </tbody>
             </table>
          <% end %>
  </div>
 </div>
</div>