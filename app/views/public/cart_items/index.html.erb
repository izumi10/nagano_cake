<p id ="notice"></p>
    <div class="container px-5 px-sm-0">
     <div class="row">
      <div class="col-md-3">

        <h4>ショッピングカート</h4>

        <p><%#= link_to public_cart_item_path do %>
           <!--buttun class="btn btn-danger">カートを空にする</buttun-->
           <%# end %>
        </p>

        <table>
          <thead>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
          </thead>
              <tbody>
                  <% @cart_item.each do |cart_item| %>
                  <tr>
                      <td><%= cart_item.item.item_name %></td>
                      <td><%= cart_item.item.with_tax_price %></td>
                      <td><%= cart_item.amount %></td>
                      <td><%= cart_item.subtotal %></td>
                      <% @合計金額 +=  cart_item.subtotal %>
                      <td> <%= link_to "削除する", public_cart_item_path(@cart_item.id), method: :delete %></td>
                  </tr>

                 <% end %>

              </tbody>
            </table>

            <p><%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary" %></p>

            <p><%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success" %></p>

    </div>
    </div>
  </div>
